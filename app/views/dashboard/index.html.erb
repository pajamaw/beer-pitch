<header>
  <h1 class="page-header">
    Welcome to BeerPitch
  </h1>
  <h2>
    We're using Rails <%= Rails.version %> and trying to help you fund that party of yours or your friends!
  </h2>
</header>
<section>
  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>

  <h4>Facebook Events for USERNAME HERE</h4>
  <h5>{{current_user.name}}</h5>
  <form>
    <input type="text" placeholder="search bar for events">
  </form>
  <table>
    <h4>
    <thead>
      <tr>
        <th>Name</th>
        <th>Length</th>
        <th>Date</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>

      <tr ng-repeat="event in events">
        <td class="name">{{event.name}}</td>
        <td class="time">{{event.start_time}}</td>
        <td class="date">{{event.date}} </td>
        <td class="info">
          <a href="http://facebook.com/events/{{event.data[0].id}}">More Info</a>
        </td>
      </tr>
        <td class="name">{{$scope.euser.name}}</td>
        <td class="time">{{$scope.euser.start_time}}</td>
        <td class="date">{{$scope.date}} </td>
        <td class="info">
          <a href="http://facebook.com/events/{{event.data[0].id}}">More Info</a>
        </td>
      </tr>
    </tbody>
  </table>

</section>
